@if (Model.Count > 0)
{
    @foreach (var group in Model)
    {
        <h2>@group.Key.ToString("yyyy-MM-dd")</h2>
        <div style="margin-bottom: 1rem;">
            <table style="width: 100%; border-collapse: collapse; table-layout: fixed;">
                <colgroup>
                    <col style="width: 7%;">
                    <col style="width: 7%;" class="d-none d-md-table-cell">
                    <col style="width: 7%;" class="d-none d-md-table-cell">
                    <col style="width: 12%;">
                    <col style="width: 7%;" class="d-none d-md-table-cell">
                    <col style="width: 7%;" class="d-none d-md-table-cell">
                    <col style="width: 7%;" class="d-none d-md-table-cell">
                    <col style="width: 7%;" class="d-none d-md-table-cell">
                    <col style="width: 7%;">
                    <col style="width: 7%;" class="d-none d-md-table-cell">
                    <col style="width: 15%;">
                </colgroup>
                <thead style="background-color: #343a40; color: #fff;">
                    <tr>
                        <th style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">訂的人</th>
                        <th class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">店家</th>
                        <th class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">杯數</th>
                        <th style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">飲料名稱</th>
                        <th class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">加料</th>
                        <th class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">冰塊</th>
                        <th class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">甜度</th>
                        <th class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">單飲料價格</th>
                        <th style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">總價格</th>
                        <th class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">訂單時間</th>
                        <th style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">修改</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in group)
                    {
                        <tr style="background-color: @((order.GetHashCode() % 2 == 0) ? "#f8f9fa" : "#ffffff");">
                            <td style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.OrderName</td>
                            <td class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.Shop</td>
                            <td class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.CupCount</td>
                            <td style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.Name</td>
                            <td class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.TeaMaterialName</td>
                            <td class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.IceName</td>
                            <td class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.SugarName</td>
                            <td class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.Money@order.Money1@order.Money2</td>
                            <td style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.Total</td>
                            <td class="d-none d-md-table-cell" style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">@order.OrderTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td style="text-align: center; padding: 0.75rem; border: 1px solid #dee2e6;">
                                <div style="display: flex; justify-content: center; gap: 0.5rem;">
                                    <div class="d-md-none" style="flex: 1; white-space: nowrap;">
                                        <a class="btn btn-info btn-sm" asp-route-orderTime="@order.OrderTime.ToString("o")" asp-controller="DrinkHome" asp-action="DrinkDetail" style="display: block; width: 100%; padding: 0.375rem 0.75rem; font-size: 0.875rem; line-height: 1.5; border-radius: 0.2rem; background-color: #17a2b8; color: #fff;">看细项</a>
                                    </div>
                                    <div style="flex: 1; white-space: nowrap;">
                                        <a class="btn btn-primary btn-sm" asp-route-orderTime="@order.OrderTime.ToString("o")" asp-controller="DrinkHome" asp-action="DrinkDelete" style="display: block; width: 100%; padding: 0.375rem 0.75rem; font-size: 0.875rem; line-height: 1.5; border-radius: 0.2rem; background-color: #007bff; color: #fff;">删除</a>
                                    </div>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
else
{
    <p>沒有訂單。</p>
}
