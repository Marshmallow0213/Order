@*爆粒鮮果*@
<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">爆粒鮮果</h2>
                            <div class="row">
                                @foreach (var Item in Model.RestingPavilionFruit)
                                {
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                        <div class="card" onclick="showHiddenDiv('@Item.ID')">
                                            <div class="card-body">
                                                <h5 class="card-title">@Item.Name</h5>
                                                <p class="card-text">價格: @Item.Money</p>
                                            </div>
                                        </div>
                                    </div>
                                    <form method="post" action="/DrinkHome/RestingPavilion" onsubmit="return validateForm()">
