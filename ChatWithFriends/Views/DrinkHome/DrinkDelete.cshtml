@model Safe
@{
    ViewData["Title"] = "刪除訂單";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }


        h4 {
            color: #dc3545;
        }

        dt {
            font-weight: bold;
            color: #007bff;
            margin-top: 10px;
        }

        dd {
            margin-bottom: 10px;
        }

    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-body">
                <h4 class="card-title text-danger">飲料資料列表</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4">訂單名稱</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.OrderName)</dd>

                    <dt class="col-sm-4">店家</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.Shop)</dd>

                    <dt class="col-sm-4">杯數</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.CupCount)</dd>

                    <dt class="col-sm-4">飲料名稱</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.Name)</dd>

                    <dt class="col-sm-4">加料</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.TeaMaterialName)</dd>

                    <dt class="col-sm-4">冰塊</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.IceName)</dd>

                    <dt class="col-sm-4">糖度</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.SugarName)</dd>

                    <dt class="col-sm-4">總計</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.Total)</dd>

                    <dt class="col-sm-4">訂單時間</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.OrderTime)</dd>
                </dl>

                <a class="btn btn-primary mt-3" asp-area="" asp-controller="DrinkHome" asp-action="Record">返回點餐紀錄</a>

                <form asp-action="DrinkDelete" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="OrderTime" />
                    <button type="submit" class="btn btn-danger">刪除訂單</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
